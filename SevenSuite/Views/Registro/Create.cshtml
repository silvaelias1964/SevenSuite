@model Application.Models.SeveClieModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id= 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 barra-titulo-form">
            <b>Registro</b> - Crear
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Create" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="id_clie" class="control-label">Id</label>
                        <input asp-for="id_clie" class="form-control" value=@id readonly />
                        <span asp-validation-for="id_clie" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="cedula" class="control-label">Cedula</label>
                        <input asp-for="cedula" class="form-control" width="15" data-toggle="tooltip" title="Nro. de Cedula" />
                        <span asp-validation-for="cedula" class="text-danger"></span>

                    </div>
                    <div class="col-md-3">                        
                        <label asp-for="fecha_nac" class="control-label">Fecha Nacimiento</label>
                        <input asp-for="fecha_nac" class="form-control" type="date" data-toggle="tooltip" title="Fecha de Nacimiento" />
                        <span asp-validation-for="fecha_nac" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <label asp-for="nombre" class="control-label">Nombres y Apellidos</label>
                        <input asp-for="nombre" class="form-control" width="100" data-toggle="tooltip" title="Nombres y apellidos" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="genero" class="control-label">Genero</label>
                        <select class="form-control select" asp-for="genero" asp-items=@ViewBag.Genero data-toggle="tooltip" title="Genero"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="id_estado_civil" class="control-label">Estado Civil</label>
                        <select class="form-control select" asp-for="id_estado_civil" asp-items=@ViewBag.Estado data-toggle="tooltip" title="Estado civil"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="nav navbar-right" style="padding-right: 10px">
                        <button type="submit" class="btn btn-danger bg-slate-600 btn-labeled btn-sm mr-2" data-toggle="tooltip" title="Confirmar agregado de registro y Salir">
                            Confirmar
                        </button>
                        <button type="button" onclick="Salir();" class="btn btn-dark bg-slate-600 btn-labeled btn-sm" data-toggle="tooltip" title="Salir al Listado">
                            Salir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script type="text/javascript">

    window.onsubmit = function () {
        //Validaciones del lado del cliente
        var cedula = $("#cedula").val();
        if(cedula.length==0) {
            alert("Error: La Cedula es requerida");
            return false;
        }
        if(cedula.length>15) {
            alert("Error: La Cedula no debe tener mas de 15 caracteres");
            return false;
        }

        var nombre = $("#nombre").val();
        if(nombre.length==0) {
            alert("Error: Nombre y apellidos son requeridos");
            return false;
        }
        if(nombre.length>100) {
            alert("Error: Nombre y apellidos no debe tener mas de 100 caracteres");
            return false;
        }

        var fecha = $("#fecha_nac").val();
        if(fecha.length==0) {
            alert("Error: La Fecha de nacimiento es requerida");
            return false;
        }

    };



    function Salir() {
            window.location.href = "/Registro/Listado";
    }
</script>
}