@model Application.Models.SeveClieModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int id = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 barra-titulo-form">
            <b>Registro</b> - Borrar 
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Delete">
                <div class="alert alert-danger">
                    <strong>¿ Está seguro de eliminar el registro ?</strong>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-2">
                        <label asp-for="id_clie" class="control-label">Id</label>
                        <input asp-for="id_clie" class="form-control" readonly />
                        <span asp-validation-for="id_clie" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="cedula" class="control-label">Cedula</label>
                        <input asp-for="cedula" class="form-control" width="15" readonly/>
                        <span asp-validation-for="cedula" class="text-danger"></span>

                    </div>
                    <div class="col-md-3">
                        <label asp-for="fecha_nac" class="control-label">Fecha Nacimiento</label>
                        <input asp-for="fecha_nac" class="form-control" type="date" readonly/>
                        <span asp-validation-for="fecha_nac" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <label asp-for="nombre" class="control-label">Nombres y Apellidos</label>
                        <input asp-for="nombre" class="form-control" width="100" readonly/>
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="genero" class="control-label">Genero</label>
                        <select class="form-control select" asp-for="genero" asp-items=@ViewBag.Genero disabled></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="id_estado_civil" class="control-label">Estado Civil</label>
                        <select class="form-control select" asp-for="id_estado_civil" asp-items=@ViewBag.Estado disabled></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="nav navbar-right" style="padding-right: 10px">
                        <button type="submit" class="btn btn-danger bg-slate-600 btn-labeled btn-sm mr-2" data-toggle="tooltip" title="Confirmar borrado de registro y Salir">
                            <b>
                                <i class="icon-checkmark3"></i>
                            </b> Confirmar
                        </button>

                        <button type="button" onclick="Salir();" class="btn btn-dark bg-slate-600 btn-labeled btn-sm" data-toggle="tooltip" title="Salir al Listado">
                            Salir
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        function Salir() {
            window.location.href = "/Registro/Listado";
        }
    </script>
}
